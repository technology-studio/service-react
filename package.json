{
  "description": "Technology Studio - Service react",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/technology-studio/service-react.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://bitbucket.org/technology-studio/"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "concurrently \"yarn workspaces run build:watch\" \"jest --watch\"",
    "build": "yarn wpd build && yarn wd build",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint-staged",
    "ncu-all": "yarn workspaces run ncu -i && ncu -i",
    "postinstall": "husky install",
    "print-txo-packages": "yarn list 2> /dev/null|grep @txo|sed 's/.*\\(@txo[^@]*\\)@^*\\([^ ]*\\).*/\\1@\\2/g'|sort|uniq",
    "sanity": "yarn lint && yarn build && yarn tsc && yarn test && yarn outdated && echo 'success'",
    "wd": "yarn workspace @txo/service-react",
    "wpd": "yarn workspace @txo-peer-dep/service-react"
  },
  "workspaces": [
    "packages/@txo/*",
    "packages/@txo-peer-dep/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@txo-peer-dep/log": "^4.0.0",
    "@txo/log-console": "^3.0.0",
    "@txo/service-prop": "^2.1.0",
    "@types/enzyme": "^3.10.11",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.4.1",
    "@types/lodash.get": "^4.4.6",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-txo-typescript": "^2.3.1",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "~2.25.4",
    "eslint-plugin-jest": "25.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "immutability-helper": "^3.1.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-check-updates": "^12.5.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "redux-saga": "^1.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@txo).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__tests__/Config/",
      "<rootDir>/__tests__/Setup.ts",
      "<rootDir>/__tests__/Data.ts",
      "<rootDir>/__tests__/Utils/"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/Setup.ts"
    ]
  }
}
